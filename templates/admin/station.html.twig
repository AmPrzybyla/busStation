{% extends 'base.html.twig' %}

{% block body %}

    <div class="pt-3">
            <span>
            <h3 class="text-muted"> {{ station.title.name}}</h3>
            </span>
        <br>
        <p class="text-dark">{{ station.text }}</p>

        {% if station.files is not empty%}
        <p>Files:</p>
        {% for file in station.files %}
            <p><a href="{{ asset('uploads/' ~file.name) }}" class="text-dark">{{ file.name }}   <button class="btn btn-dark">Download</button></a></p>
        {% endfor %}

        {% endif %}
    </div>


{% endblock %}

